fragment@0 {
	target = <SLOT_I2C_ALIAS>;

	__overlay__ {
		SLOT_DT_ALIAS(WBIO_NAME): gpio@SLOT_I2C_ADDRESS {
			compatible = "microchip,mcp23008";
			gpio-controller;
			#gpio-cells = <2>;
			reg = <HEX_PREFIX(SLOT_I2C_ADDRESS)>;

			interrupt-parent = <SLOT_GPIO_PORT(INT)>;
			interrupts = <SLOT_GPIO_PIN(INT) IRQ_TYPE_LEVEL_LOW>;
			interrupt-controller;
			#interrupt-cells=<2>;

			linux,gpio-base = <SLOT_GPIO_BASE>;
		};
	};
};

