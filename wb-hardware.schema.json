{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Hardware Modules Configuration",
  "description": "Lists additional hardare modules configuration",
  "limited": true,
  "strictProps": false,
  "definitions": {
    "module_conf_none": {
      "title": " ",
      "options": {
        "hidden": true,
        "remove_empty_properties": true,
        "collapsed": true
      }
    },

    "module_conf_wbe-ai-cvr-2_thermistor": {
      "title": "3-wire thermistor",
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "title": "Mode",
          "enum": ["thermistor"],
          "default": "thermistor",
          "options": {
            "hidden": true
          },
          "propertyOrder": 1
        }
      },
      "required": ["mode"]
    },

    "module_conf_wbe-ai-cvr-2_separate": {
      "title": "Separate channels",
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "title": "Mode",
          "enum": ["separate"],
          "default": "separate",
          "options": {
            "hidden": true
          },
          "propertyOrder": 1
        },
        "channels": {
          "type": "array",
          "title": "Channels",
          "minItems": 2,
          "maxItems": 2,
          "_format": "tabs",
          "items": {
            "type": "object",
            "title": "Channel options",
            "headerTemplate": "Channel {{i1}}",
            "options": {
              "disable_collapse": true
            },
            "properties": {
              "mode": {
                "type": "string",
                "title": "Mode",
                "minLength": 1,
                "enumSource": [{
                  "source": [
                    { "value": "voltage", "title": "Voltage, 0-3.3 V" },
                    { "value": "current", "title": "Current, 0-70 mA" },
                    { "value": "resistance", "title": "Resistance, 0.1-10 kOhm" }
                  ],
                  "value": "{{item.value}}",
                  "title": "{{item.title}}"
                }],
                "default": "voltage"
              }
            },
            "required": ["mode"]
          },
          "options": {
            "disable_collapse": true,
            "disable_array_add": true,
            "disable_array_delete": true,
            "disable_array_reorder": true
          },
          "propertyOrder": 2
        }
      },
      "required": ["mode", "channels"]
    },

    "module_conf_wbe-ai-cvr-2": {
      "type": "object",
      "title": "WBE-AI-CVR-2 operation mode",
      "options": {
        "remove_empty_properties": true,
        "disable_collapse" : true,
        "hidden": false,
        "keep_oneof_values": false
      },
      "oneOf": [
        { "$ref": "#/definitions/module_conf_wbe-ai-cvr-2_separate" },
        { "$ref": "#/definitions/module_conf_wbe-ai-cvr-2_thermistor" }
      ]
    },

    "slot": {
      "type": "object",
      "title": "Slot",
      "headerTemplate": "{{self.name}}",
      "id": "slot_item",
      "options": {
        "disable_collapse": true
      },
      "properties": {
        "id": {
          "type": "string",
          "title": "Slot ID",
          "minLength": 1,
          "options": {
            "hidden": true
          }
        },
        "name": {
          "type": "string",
          "title": "Name",
          "minLength": 1,
          "propertyOrder": 1
        },
        "type": {
          "type": "string",
          "title": "Slot type",
          "minLength": 1,
          "options": {
            "hidden": true
          }
        },
        "module": {
          "title": "Module type",
          "description": "Type of the module plugged to the slot",
          "type": "string",
          "watch": {
            "all_modules": "modules",
            "slot_type": "slot_item.type"
          },
          "enumSource": [
            {
              "source": [
                {
                  "title": "None",
                  "value": ""
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            },
            {
              "source": "all_modules",
              "filter": "{{if watched.slot_type in item.compatible_slots}}1{{endif}}",
              "title": "{{item.description}}",
              "value": "{{item.id}}"
            }
          ],
          "propertyOrder": 2
        },
        "options": {
          "type": "object",
          "title": " ",
          "options": {
            "disable_collapse": true
          },
          "watch": {
            "all_modules": "modules",
            "module_type": "slot_item.module"
          },
          "links": [{
            "rel": "describedBy",
            "href": "#/definitions/module_conf_{{if all_modules.[module_type] == \"\"}}none{{else}}{{module_type}}{{endif}}"
          }],
          "propertyOrder": 3
        }
      },
      "required": ["id", "name", "type", "module"],
      "defaultProperties": ["id", "name", "type", "module", "options"]
    },

    "module": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "compatible_slots": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": ["id", "description", "compatible_slots"]
    }
  },

  "properties": {
    "slots": {
      "type": "array",
      "title": "List of extension slots",
      "description": "Lists available extension slots",
      "options": {
        "disable_collapse": true,
        "disable_array_add": true,
        "disable_array_delete": true,
        "disable_array_reorder": true
      },
      "items": { "$ref": "#/definitions/slot" },
      "_format": "tabs",
      "propertyOrder": 1
    },
    "modules": {
      "type": "array",
      "options": {
        "hidden": true
      },
      "items": { "$ref": "#/definitions/module" }
    }
  },
  "required": ["slots"],
  "configFile": {
    "path": "/etc/wb-hardware.conf",
    "needReload": true,
    "service": "wb-hwconf-manager",
    "toJSON": ["wb-hwconf-helper", "confed-tojson"],
    "fromJSON": ["wb-hwconf-helper", "confed-fromjson"]
  }
}
